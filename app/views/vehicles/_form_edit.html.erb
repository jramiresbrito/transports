<%= simple_form_for(@vehicle) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <%= f.association :fuel_tank, label: "Tanque de Combustível", label_method: :info, value_method: :id, required: true %>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <%= f.input :distance_traveled, label: "Distância Percorrida (Km's)", required: true %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, locals[:button_label], { class: 'btn btn-primary' } %>
  </div>
<% end %>
