<% if notice %>
  <div id="notice" class="flash flash-success alert alert-dismissible fade show" role="alert">
    <span><%= notice %></span>
    <a data-dismiss="alert" aria-label="Close">
      <%= icon('fas', 'times') %>
    </a>
  </div>
<% end %>

<h1 class="m-3">Veículos</h1>
<%= link_to 'Novo Veículo', new_vehicle_path, class: "btn btn-primary mb-3" %>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Veículo</th>
      <th scope="col">Custo Total</th>
      <th scope="col">Distância Percorrida (Km's)</th>
      <th scope="col">Autonomia Atual (Km's)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.info %></td>
        <td><%= price_mask_real(vehicle.fuel_cost + vehicle.maintenances_cost) %></td>
        <td><%= vehicle.distance_traveled %></td>
        <td><%= vehicle.current_autonomy %></td>
        <td>
          <%= link_to vehicle, :class => "btn btn-success" do %>
            <span>Detalhes <%= icon('fas', 'car') %></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_vehicle_path(vehicle), :class => "btn btn-info" do %>
            <span>Tanque <%= icon('fas', 'gas-pump') %></span>
          <% end %>
        </td>
        <td>
          <%= link_to vehicle, :class => "btn btn-danger", method: :delete, data: { confirm: 'Tem certeza?' } do %>
            <span>Excluir <%= icon('fas', 'trash-alt') %></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>