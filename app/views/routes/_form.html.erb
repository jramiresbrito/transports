<%= simple_form_for(@route) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="row justify-content-center">
      <div class="col-lg-2">
        <%= f.input :date, as: :string, label: "Data", input_html: {class: "datepicker"}, required: true %>
      </div>
      <div class="col-lg-2">
        <%= f.input :size, label: "Tamanho (Km's)" %>
      </div>
      <div class="col-lg-6">
        <%= f.association :vehicle, label: "VeÃ­culo", label_method: :info, value_method: :id, required: true %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, locals[:button_label], { class: 'btn btn-primary' } %>
  </div>
<% end %>
