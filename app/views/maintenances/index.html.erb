<% if notice %>
  <div id="notice" class="flash flash-success alert alert-dismissible fade show" role="alert">
    <span><%= notice %></span>
    <a data-dismiss="alert" aria-label="Close">
      <%= icon('fas', 'times') %>
    </a>
  </div>
<% end %>

<h1 class="m-3">Manutenções</h1>
<%= link_to 'Nova Manutenção', new_maintenance_path, :class => "btn btn-primary mb-3" %>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Data</th>
      <th scope="col">Distância Percorrida (KM)</th>
      <th scope="col">Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @maintenances.each do |maintenance| %>
      <tr>
        <td><%= format_date(maintenance.date) %></td>
        <td><%= maintenance.distance_traveled %></td>
        <td><%= maintenance.tipo %></td>
        <td>
          <%= link_to maintenance, :class => "btn btn-success" do %>
            <span>Detalhes <%= icon('fas', 'wrench') %></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_maintenance_path(maintenance), :class => "btn btn-info" do %>
            <span>Editar <%= icon('fas', 'edit') %></span>
          <% end %>
        </td>
        <td>
          <%= link_to maintenance, :class => "btn btn-danger", method: :delete, data: { confirm: 'Tem certeza?' } do %>
            <span>Excluir <%= icon('fas', 'trash-alt') %></span>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
